<div {{ attributes }}>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-12">
        {% for product in this.products %}
            <div class="group relative flex flex-col fade-in">
                <div class="aspect-square w-full overflow-hidden rounded-[2.5rem] bg-gray-100 group-hover:shadow-2xl transition-all duration-500 shadow-sm relative">
                    <img src="{{ product.mainImageUrl ?: 'https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=500' }}" 
                         alt="{{ product.name }}" 
                         class="h-full w-full object-cover object-center group-hover:scale-110 transition-transform duration-700">
                    
                    {% if product.isNew %}
                        <span class="absolute top-4 left-4 bg-indigo-600 text-white text-[10px] font-black px-3 py-1.5 rounded-full uppercase tracking-widest shadow-lg">New</span>
                    {% endif %}

                    <div class="absolute inset-x-4 bottom-4 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                        <button class="w-full bg-white text-gray-900 py-3 rounded-2xl font-black text-sm shadow-xl flex items-center justify-center gap-2 hover:bg-gray-900 hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M12 5v14M5 12h14"/></svg>
                            Ajouter au panier
                        </button>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-between items-start px-2">
                    <div>
                        <h3 class="text-lg font-black text-gray-900 tracking-tight mb-1">
                            <a href="#">
                                <span aria-hidden="true" class="absolute inset-0"></span>
                                {{ product.name }}
                            </a>
                        </h3>
                        <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">{{ product.category.name }}</p>
                    </div>
                    <p class="text-xl font-black text-indigo-600">{{ product.price }}â‚¬</p>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-20 text-center">
                <p class="text-gray-400 font-medium italic">Aucun produit disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>