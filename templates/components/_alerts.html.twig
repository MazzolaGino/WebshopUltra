{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% set bgColor = 'bg-blue-50' %}
        {% set textColor = 'text-blue-800' %}
        {% set borderColor = 'border-blue-200' %}
        {% set iconColor = 'text-blue-400' %}
        
        {% if label == 'success' %}
            {% set bgColor = 'bg-green-50' %}
            {% set textColor = 'text-green-800' %}
            {% set borderColor = 'border-green-200' %}
            {% set iconColor = 'text-green-400' %}
        {% elseif label == 'error' or label == 'danger' %}
            {% set bgColor = 'bg-red-50' %}
            {% set textColor = 'text-red-800' %}
            {% set borderColor = 'border-red-200' %}
            {% set iconColor = 'text-red-400' %}
        {% elseif label == 'warning' %}
            {% set bgColor = 'bg-amber-50' %}
            {% set textColor = 'text-amber-800' %}
            {% set borderColor = 'border-amber-200' %}
            {% set iconColor = 'text-amber-400' %}
        {% endif %}

        <div class="flex items-center p-5 mb-6 rounded-2xl border-2 {{ bgColor }} {{ textColor }} {{ borderColor }} animate-in fade-in slide-in-from-top-4 duration-500" role="alert">
            <div class="flex-shrink-0">
                {% if label == 'success' %}
                    <svg class="w-6 h-6 {{ iconColor }}" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                {% elseif label == 'error' or label == 'danger' %}
                    <svg class="w-6 h-6 {{ iconColor }}" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                    </svg>
                {% else %}
                    <svg class="w-6 h-6 {{ iconColor }}" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                {% endif %}
            </div>
            <div class="ml-4 text-sm font-bold tracking-wide">
                {{ message|raw }}
            </div>
            <button type="button" onclick="this.parentElement.remove()" class="ml-auto -mx-1.5 -my-1.5 p-1.5 inline-flex h-8 w-8 {{ textColor }} hover:bg-white/50 rounded-lg transition-colors">
                <span class="sr-only">Fermer</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
    {% endfor %}
{% endfor %}